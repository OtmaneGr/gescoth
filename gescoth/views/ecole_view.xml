							</group>
							<group>
								<field name="professeur"/>
								<field name="niveau_id"/>
							</group>
						</group>
						<notebook>
							<page string="Matières">
								<field name="coeficient_ids"/>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>


